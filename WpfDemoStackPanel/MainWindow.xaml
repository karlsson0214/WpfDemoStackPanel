<Window x:Class="WpfDemoStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoStackPanel"
        mc:Ignorable="d"
        Title="Demo StackPanel" Height="450" Width="800">
    <StackPanel>
        <TextBlock Name="textOne" FontSize="40" Margin="10" Text="TextBlock Left"/>
        <TextBlock Name="textTwo" FontSize="40" Margin="10" Text="TextBlock Center" TextAlignment="Center"/>
        <TextBlock Name="textThree" FontSize="40" Margin="10" Text="TextBlock Right" TextAlignment="Right"/>
        <Button Name="buttonOne" FontSize="40" Margin="10" Content="Click me" Click="buttonOne_Click"  HorizontalAlignment="Center" />
    </StackPanel>
</Window>
